  <%= simple_form_for(@instance, :html => {:class => 'form-horizontal' }) do |form| %>
    <% if @instance.errors.any? %>

      <%= display_base_errors @instance %>

      <div class="alert alert-error alert-block">
        <button type="button" class="close" data-dismiss="alert">&times;</button>
        <p><strong>Oh snap!</strong> looks like something is wrong:</p>
        <ul>
        <% @instance.errors.full_messages.each do |msg| %>
           <li><%= msg %></li>
         <% end %>
       </ul>
      </div>
    <% end %>

  <%= form.input :course, label: 'Course Number', placeholder: 'Course this will be used in' %>
  <%= form.input :instructor, label: 'Instructor', placeholder: 'Instructor of record' %>
  <h3>Terms</h3>
  <p>Lorem ipsum...</p>

  <div class="control-group">
    <div class="controls">
      <%= form.input :terms, label: "Yes, I agree" %>
      <%= form.submit %>
    </div>
  </div>
  
<% end %>
