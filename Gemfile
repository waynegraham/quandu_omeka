source 'https://rubygems.org'

gem 'rails', '3.2.13'

gem 'sqlite3'

group :assets do
  gem 'sass-rails',   '~> 3.2.3'
  gem 'bootstrap-sass', '~> 2.3.2.0'
  gem 'coffee-rails', '~> 3.2.1'

  gem 'uglifier', '>= 1.0.3'
end

gem 'jquery-rails'
gem 'will_paginate'
gem 'simple_form'
gem 'thin'
gem 'slugify'

group :development do
  gem 'rack-livereload'
  gem 'guard-livereload'
  gem 'guard-rspec'
  gem 'guard-spork'
  gem 'rb-fsevent'
end

group :development, :test do
  gem 'rspec-rails'
  gem 'factory_girl_rails'
end

group :test do
  gem 'simplecov', :require => false
  gem 'faker'
  gem "capybara"
  gem "database_cleaner"
  gem "shoulda-matchers"
end

